<div class="tours-filter">
    <div id="categories-2" class="widget widget_categories">
        <!--<h6 class="eltd-widget-title">Categories</h6>-->
        <label class="screen-reader-text" for="cat">Categories</label>
        <select name='cat' id='cat' class='postform'>
            <option value='-1'>Select Category</option>
            <% categories.forEach(category=>{ %>
            <option class="level-0" value="<%= category._id %>"><%= category.name %></option>
            <% }) %>
        </select>
    </div>
    <div id="days-count" class="widget widget_categories">
        <!--<h6 class="eltd-widget-title">Days Count</h6>-->
        <label class="screen-reader-text" for="cat">Days Count</label>
        <select name='days' id='days' class='postform'>
            <option value='-1'>Select days count</option>
            <% days.forEach(day=>{ %>
            <option class="level-0" value="<%= day %>"><%= day %></option>
            <% }) %>
        </select>
    </div>
</div>